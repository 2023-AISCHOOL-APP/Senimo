<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SenimoApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:popupMenuStyle">@style/MenuStyle</item>
        <item name="android:statusBarColor">#CB000000</item>
    </style>

    <style name="Theme.SenimoApplication" parent="Base.Theme.SenimoApplication"/>
    <!-- 모임페이지 메뉴스타일   -->
    <style name="TabLayoutStyle" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="tabIndicatorColor">@color/main</item>
        <item name="tabTextAppearance">@color/main</item>
    </style>
    <style name="TabBasicStyle" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="tabTextAppearance">@color/txt_gray30</item>
    </style>

    <!-- 메인 페이지 모임 사진 스타일 -->
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="color">@color/white</item>
    </style>

    <!-- 모임페이지 일정 사진 스타일 -->
    <style name="RoundedImageView2">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="color">@color/white</item>
    </style>

    <!-- 회원 목록 회원 프로필 사진 스타일   -->
    <style name="RoundedProfileImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25dp</item>
        <item name="color">@color/white</item>
    </style>

    <!-- 채팅 리스트 회원 프로필 사진 스타일   -->
    <style name="RoundedChatProfileImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
        <item name="color">@color/white</item>
    </style>

    <!-- 댓글 회원 프로필 사진 스타일   -->
    <style name="RoundedProfileComment">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
        <item name="color">@color/white</item>
    </style>

    <!--내정보 회원 프로필 사진 스타일 -->
    <style name="RoundedMyPageProfileComment">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">35dp</item>
        <item name="color">@color/white</item>
    </style>

    <!--내정보수정 회원 프로필 사진 스타일 -->
    <style name="RoundedEditMyPageProfileComment">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
        <item name="color">@color/white</item>
    </style>

    <!--모임생성 사진 스타일 -->
    <style name="RoundedCreateMeetingProfileComment">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
        <item name="color">@color/txt_gray10</item>
    </style>

    <!--일정 등록 사진 스타일 -->
    <style name="RoundedScheduleProfileComment">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
        <item name="color">@color/txt_gray10</item>
    </style>

    <!--일정 등록된 사진 스타일 -->
    <style name="RoundedScheduledProfileComment">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">14dp</item>
    </style>


    <!-- 옵션 메뉴 스타일 -->
    <style name="MenuStyle" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:minWidth">130dp</item>
        <item name="android:background">#FF0000</item>
        <item name="android:height">200dp</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!-- 다이얼로그 스타일   -->
    <style name="DialogStyle" parent="@style/Widget.AppCompat.ButtonBar.AlertDialog">

    </style>

</resources>