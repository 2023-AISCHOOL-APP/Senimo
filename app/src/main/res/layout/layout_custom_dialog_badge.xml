<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="375dp"
    android:layout_gravity="center"
    android:layout_marginHorizontal="20dp"
    app:cardBackgroundColor="@color/point"
    app:cardCornerRadius="20dp"
    app:cardElevation="15dp">

    <androidx.cardview.widget.CardView
        android:layout_width="295dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgMClosebtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_close_dialog_red" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgMBadge"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="-15dp"
                app:srcCompat="@drawable/ic_badge1_on" />

            <TextView
                android:id="@+id/tvMBadgeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/pretendard_extrabold"
                android:gravity="center"
                android:text="시니모뉴비"
                android:textColor="@color/txt_gray90"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnMGetInfo"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/button_shape_main"
                    android:backgroundTint="@color/point"
                    android:backgroundTintMode="src_in"
                    android:fontFamily="@font/pretendard_bold"
                    android:hapticFeedbackEnabled="true"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="6dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="8dp"
                    android:text="보유 중"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvMText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_bold"
                android:text="시니모에 가입하셨군요!"
                android:textAlignment="center"
                android:textColor="@color/txt_gray90"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvMText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_bold"
                android:text="회원가입을 환영합니다 :)"
                android:textAlignment="center"
                android:textColor="@color/txt_gray90"
                android:textSize="18sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>