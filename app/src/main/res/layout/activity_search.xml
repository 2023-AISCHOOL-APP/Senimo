<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.senimoapplication.MainPage.Activity_main.SearchActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="314dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardElevation="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:id="@+id/img_M_BackbtnToFrag1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_M_Toptitle"
                        app:layout_constraintStart_toStartOf="@+id/tv_M_Toptitle"
                        app:layout_constraintTop_toTopOf="@+id/tv_M_Toptitle"
                        app:srcCompat="@drawable/ic_back_black" />

                    <TextView
                        android:id="@+id/tv_M_Toptitle"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:elevation="5dp"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="center"
                        android:text="모임찾기"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView3"
                app:srcCompat="@drawable/bar_search" />

            <ImageView
                android:id="@+id/Img_M_SearchIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintEnd_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                app:srcCompat="@drawable/ic_search_white" />

            <EditText
                android:id="@+id/tv_M_SearchBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/white"
                android:fontFamily="@font/pretendard_medium"
                android:hint="원하는 모임을 검색해보세요."
                android:inputType="text"
                android:textColorHint="@color/txt_gray30"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintEnd_toStartOf="@+id/Img_M_SearchIcon"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/imageView" />

            <TextView
                android:id="@+id/tv_M_Keyword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shapeborder_searchmeeting_page"
                android:drawablePadding="5dp"
                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingRight="10dp"
                android:paddingBottom="3dp"
                android:text="운동"
                android:textColor="@color/point"
                android:textSize="18sp"
                app:drawableRightCompat="@drawable/ic_btn_delete"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_M_Locationmeeting" />

            <TextView
                android:id="@+id/tv_M_Keyword2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shapeborder_searchmeeting_page"
                android:drawablePadding="5dp"
                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingRight="10dp"
                android:paddingBottom="3dp"
                android:text="복싱 모임"
                android:textColor="@color/point"
                android:textSize="18sp"
                app:drawableRightCompat="@drawable/ic_btn_delete"
                app:layout_constraintStart_toEndOf="@+id/tv_M_Keyword"
                app:layout_constraintTop_toBottomOf="@+id/tv_M_Locationmeeting" />

            <TextView
                android:id="@+id/tv_M_Keyword3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shapeborder_searchmeeting_page"
                android:drawablePadding="5dp"
                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingRight="10dp"
                android:paddingBottom="3dp"
                android:text="개발자"
                android:textColor="@color/point"
                android:textSize="18sp"
                app:drawableRightCompat="@drawable/ic_btn_delete"
                app:layout_constraintStart_toEndOf="@+id/tv_M_Keyword2"
                app:layout_constraintTop_toBottomOf="@+id/tv_M_Locationmeeting" />

            <TextView
                android:id="@+id/tv_M_Locationmeeting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="최근 검색어"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <TextView
                android:id="@+id/tv_M_CategoryTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="검색결과"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="@+id/tv_M_Locationmeeting"
                app:layout_constraintTop_toBottomOf="@+id/tv_M_Locationmeeting" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_M_CategoryMeeting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tv_M_CategoryTitle"
                app:layout_constraintStart_toStartOf="@+id/tv_M_CategoryTitle"
                app:layout_constraintTop_toBottomOf="@+id/tv_M_CategoryTitle">

            </androidx.recyclerview.widget.RecyclerView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>