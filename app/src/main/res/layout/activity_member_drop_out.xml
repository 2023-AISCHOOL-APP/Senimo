<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPage.Activity_main.MemberDropOutActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/main_opacity50">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView8"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardElevation="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:id="@+id/img_M_BackbtnToSetting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_M_Dropout"
                        app:layout_constraintStart_toStartOf="@+id/tv_M_Dropout"
                        app:layout_constraintTop_toTopOf="@+id/tv_M_Dropout"
                        app:srcCompat="@drawable/ic_back_black" />

                    <TextView
                        android:id="@+id/tv_M_Dropout"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:elevation="5dp"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="center"
                        android:text="회원 탈퇴"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="회원"
                android:textColor="@color/main"
                android:textSize="32sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView8" />

            <TextView
                android:id="@+id/textView39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_bold"
                android:text="님,"
                android:textColor="@color/txt_black"
                android:textSize="32sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView26"
                app:layout_constraintStart_toEndOf="@+id/textView26"
                app:layout_constraintTop_toTopOf="@+id/textView26" />

            <TextView
                android:id="@+id/textView43"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="시니모를 떠나시나요?"
                android:textColor="@color/txt_black"
                android:textSize="32sp"
                app:layout_constraintStart_toStartOf="@+id/textView26"
                app:layout_constraintTop_toBottomOf="@+id/textView26" />

            <TextView
                android:id="@+id/textView44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="너무 아쉽습니다"
                android:textColor="@color/txt_black"
                android:textSize="32sp"
                app:layout_constraintStart_toStartOf="@+id/textView43"
                app:layout_constraintTop_toBottomOf="@+id/textView43" />

            <TextView
                android:id="@+id/textView45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/pretendard_semibold"
                android:text="탈퇴하시기 전에"
                android:textColor="@color/txt_gray90"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/textView44"
                app:layout_constraintTop_toBottomOf="@+id/textView44" />

            <TextView
                android:id="@+id/textView46"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_semibold"
                android:text="아래 내용을 확인해주세요."
                android:textColor="@color/txt_gray90"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/textView45"
                app:layout_constraintTop_toBottomOf="@+id/textView45" />

            <TextView
                android:id="@+id/textView48"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:drawableLeft="@drawable/circle_shape_dropoutpage"
                android:drawablePadding="10dp"
                android:fontFamily="@font/pretendard_regular"
                android:text="부정 이용 방지를 위해 탈퇴 후 30일 동안"
                android:textColor="@color/txt_gray90"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="@+id/textView46"
                app:layout_constraintTop_toBottomOf="@+id/textView46" />

            <TextView
                android:id="@+id/textView51"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:drawableLeft="@drawable/circle_shape_dropoutpage"
                android:drawablePadding="10dp"
                android:fontFamily="@font/pretendard_regular"
                android:text="참여 또는 진행하고 있는 모임이 있다면 탈퇴할"
                android:textColor="@color/txt_gray90"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="@+id/textView49"
                app:layout_constraintStart_toStartOf="@+id/textView48"
                app:layout_constraintTop_toBottomOf="@+id/textView50" />

            <TextView
                android:id="@+id/textView54"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:drawableLeft="@drawable/circle_shape_dropoutpage"
                android:drawablePadding="10dp"
                android:fontFamily="@font/pretendard_regular"
                android:text="멤버님의 모든 정보는 탈퇴 시 삭제됩니다. 삭"
                android:textColor="@color/txt_gray90"
                android:textSize="17.8sp"
                app:layout_constraintStart_toStartOf="@+id/textView51"
                app:layout_constraintTop_toBottomOf="@+id/textView53" />

            <TextView
                android:id="@+id/textView50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:drawablePadding="10dp"
                android:fontFamily="@font/pretendard_regular"
                android:text="에 다시 가입하실 수 없어요."
                android:textColor="@color/txt_gray90"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="@+id/textView48"
                app:layout_constraintTop_toBottomOf="@+id/textView48" />

            <TextView
                android:id="@+id/textView53"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:drawablePadding="10dp"
                android:fontFamily="@font/pretendard_regular"
                android:text="수 없어요."
                android:textColor="@color/txt_gray90"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="@+id/textView51"
                app:layout_constraintTop_toBottomOf="@+id/textView51" />

            <TextView
                android:id="@+id/textView55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:drawablePadding="10dp"
                android:fontFamily="@font/pretendard_regular"
                android:text="제된 데이터는 복구할 수 없어요."
                android:textColor="@color/txt_gray90"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="@+id/textView54"
                app:layout_constraintTop_toBottomOf="@+id/textView54" />

            <TextView
                android:id="@+id/textView49"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:drawablePadding="10dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="시니"
                android:textColor="@color/txt_gray90"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView48"
                app:layout_constraintStart_toEndOf="@+id/textView48"
                app:layout_constraintTop_toTopOf="@+id/textView48" />

            <TextView
                android:id="@+id/textView52"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:drawablePadding="10dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="모"
                android:textColor="@color/txt_gray90"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView50"
                app:layout_constraintEnd_toStartOf="@+id/textView50"
                app:layout_constraintTop_toTopOf="@+id/textView50" />

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="84dp"
                android:layout_marginTop="115dp"
                android:background="@drawable/card_bttom"
                android:elevation="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView55" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSetDropout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/button_shape_main"
                android:elevation="5dp"
                android:fontFamily="@font/pretendard_semibold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:text="탈퇴하기"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:visibility="visible"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/view"
                app:layout_constraintTop_toTopOf="@+id/view"
                tools:layout_conversion_absoluteHeight="60dp"
                tools:layout_conversion_absoluteWidth="0dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>