<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.Activity_login.SignUpActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvSignUp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:elevation="5dp"
                android:fontFamily="@font/pretendard_bold"
                android:gravity="center"
                android:text="회원가입"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgBackToIntro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvSignUp"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_back" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/view6"
        android:layout_width="0dp"
        android:layout_height="84dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/card_bttom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnToEnterMyInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_shape_main"
        android:fontFamily="@font/pretendard_semibold"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="다음"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/view6"
        app:layout_constraintEnd_toEndOf="@+id/view6"
        app:layout_constraintStart_toStartOf="@+id/view6" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="아이디와 비밀번호를"
        android:textColor="@color/txt_black"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_bold"
        android:text="입력해 주세요."
        android:textColor="@color/txt_black"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/textView24"
        app:layout_constraintTop_toBottomOf="@+id/textView24" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/pretendard_semibold"
        android:text="아이디"
        android:textColor="@color/txt_gray50"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/textView24"
        app:layout_constraintTop_toBottomOf="@+id/textView27" />

    <EditText
        android:id="@+id/etSignUpId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@drawable/et_underline"
        android:ems="10"
        android:hint="아이디를 입력해 주세요."
        android:inputType="text"
        android:lineSpacingExtra="10sp"
        android:lineSpacingMultiplier="1.2"
        android:textColorHighlight="@color/main_opacity60"
        app:layout_constraintEnd_toStartOf="@+id/btnIdCheck"
        app:layout_constraintStart_toStartOf="@+id/textView28"
        app:layout_constraintTop_toBottomOf="@+id/textView28" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/pretendard_semibold"
        android:text="비밀번호"
        android:textColor="@color/txt_gray50"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/etSignUpId"
        app:layout_constraintTop_toBottomOf="@+id/etSignUpId" />

    <EditText
        android:id="@+id/etSignUpPw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/et_underline"
        android:ems="10"
        android:hint="비밀번호를 입력해 주세요."
        android:inputType="textPassword"
        android:textColorHighlight="@color/main_opacity60"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView29"
        app:layout_constraintTop_toBottomOf="@+id/textView29" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/pretendard_semibold"
        android:text="비밀번호 확인"
        android:textColor="@color/txt_gray50"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/etSignUpPw"
        app:layout_constraintTop_toBottomOf="@+id/etSignUpPw" />

    <EditText
        android:id="@+id/etSignUpPwCheck"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/et_underline"
        android:ems="10"
        android:hint="비밀번호를 다시 입력해 주세요."
        android:inputType="textPassword"
        android:textColorHighlight="@color/main_opacity60"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView31"
        app:layout_constraintTop_toBottomOf="@+id/textView31" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnIdCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/pretendard_medium"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="중복확인"
        android:textColor="@color/main"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/etSignUpId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etSignUpId" />

    <TextView
        android:id="@+id/tv_UserIdWarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="중복된 ID입니다."
        android:textColor="@color/main"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/etSignUpId"
        app:layout_constraintTop_toBottomOf="@+id/etSignUpId" />

    <TextView
        android:id="@+id/tv_UserPwWarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="비밀번호가 일치하지 않습니다."
        android:textColor="@color/main"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/etSignUpId"
        app:layout_constraintTop_toBottomOf="@+id/etSignUpPwCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>