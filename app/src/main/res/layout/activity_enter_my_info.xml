<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.Activity_login.EnterMyInfoActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgBackToSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvSignUp"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_back" />

            <TextView
                android:id="@+id/tvSignUp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:elevation="5dp"
                android:fontFamily="@font/pretendard_bold"
                android:gravity="center"
                android:text="회원가입"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView56"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:text="/300"
                android:textColor="@color/txt_gray70"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/etmlUserIntroS"
                app:layout_constraintTop_toBottomOf="@+id/etmlUserIntroS" />

            <TextView
                android:id="@+id/tv_M_LetterCnt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:text="0"
                android:textColor="@color/txt_gray70"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/textView56"
                app:layout_constraintTop_toBottomOf="@+id/etmlUserIntroS" />

            <View
                android:id="@+id/view8"
                android:layout_width="0dp"
                android:layout_height="84dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/card_bttom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView56" />

            <TextView
                android:id="@+id/textView52"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="시니모 활동을 위해"
                android:textColor="@color/txt_black"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_bold"
                android:text="회원님의 정보가 필요해요."
                android:textColor="@color/txt_black"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="@+id/textView52"
                app:layout_constraintTop_toBottomOf="@+id/textView52" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvGu"
                android:layout_width="120dp"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rvgu_edge"
                app:layout_constraintStart_toStartOf="@+id/textView49"
                app:layout_constraintTop_toBottomOf="@+id/textView49" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDong"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rvdong_edge"
                app:layout_constraintBottom_toBottomOf="@+id/rvGu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/rvGu"
                app:layout_constraintTop_toTopOf="@+id/rvGu" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnEnterInfo"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_shape_main"
                android:fontFamily="@font/pretendard_bold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="가입하기"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:cornerRadius="13dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/pretendard_semibold"
                android:text="이름"
                android:textColor="@color/txt_gray50"
                app:layout_constraintStart_toStartOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <EditText
                android:id="@+id/etNameS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:background="@drawable/et_underline"
                android:ems="10"
                android:hint="이름을 입력해 주세요."
                android:inputType="text"
                android:textColor="@color/txt_gray90"
                android:textColorHighlight="@color/main_opacity60"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/pretendard_semibold"
                android:text="출생년도"
                android:textColor="@color/txt_gray50"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/etNameS"
                app:layout_constraintTop_toBottomOf="@+id/etNameS" />

            <TextView
                android:id="@+id/textView48"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="95dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/pretendard_semibold"
                android:text="성별"
                android:textColor="@color/txt_gray50"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/textView10"
                app:layout_constraintTop_toBottomOf="@+id/etNameS" />

            <Button
                android:id="@+id/button"
                android:layout_width="124dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="Button"
                app:layout_constraintStart_toStartOf="@+id/textView10"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <Button
                android:id="@+id/button2"
                android:layout_width="124dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="Button"
                app:layout_constraintStart_toStartOf="@+id/textView48"
                app:layout_constraintTop_toBottomOf="@+id/textView48" />

            <TextView
                android:id="@+id/textView49"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/pretendard_semibold"
                android:text="거주지"
                android:textColor="@color/txt_gray50"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/button"
                app:layout_constraintTop_toBottomOf="@+id/button" />

            <TextView
                android:id="@+id/textView50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/pretendard_semibold"
                android:text="소개글"
                android:textColor="@color/txt_gray50"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/rvGu"
                app:layout_constraintTop_toBottomOf="@+id/rvGu" />

            <EditText
                android:id="@+id/etmlUserIntroS"
                android:layout_width="0dp"
                android:layout_height="328dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/m_et_box_border"
                android:ems="10"
                android:gravity="start|top"
                android:hint="회원님을 소개해주세요."
                android:inputType="textMultiLine"
                android:textColorHighlight="@color/main_opacity60"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView50"
                app:layout_constraintTop_toBottomOf="@+id/textView50" />

            <TextView
                android:id="@+id/tv_M_UserIntroWarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:text="300자를 초과할 수 없습니다."
                android:textColor="@color/main"
                android:textSize="12sp"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="@+id/etmlUserIntroS"
                app:layout_constraintTop_toBottomOf="@+id/etmlUserIntroS" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>